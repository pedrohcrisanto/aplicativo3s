<%= form_with(model: doctype, local: true) do |form| %>
  <% if doctype.errors.any? %>
    <div id="error_explanation">
      

      <ul>
      <% doctype.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="box box-primary container box-body">
    <div class="form-row">
    <div class="form-group col-md-12">
    <%= form.label :nome %>
    <%= form.text_field :nome , class: "form-control"%>
  </div>

  <div class="form-group col-md-12">
    <%= form.label :descricao %>
    <%= form.text_area :descricao , class: "form-control"%>
  </div>

  <div class="box-footer text-center">
    <%= form.submit "Cadastrar" , class:'btn btn-success'%>
  </div>
</div>
</div>
<% end %>
