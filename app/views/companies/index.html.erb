

<h2 class="text-center">Empresas</h2>
<div class="box box-primary container box-body">
<table class="table table-bordered table-hover table-striped">
  <thead>
    <tr>
      <th>#</th>
      <th>Nome</th>
      <th>CNPJ</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.id %></td>
        <td><%= company.nome %></td>
        <td><%= company.cnpj %></td>
        <td class="col-xs-1"><%= link_to '', company , class:'btn btn-info fa fa-2x fa-eye'%></td>
        <td class="col-xs-1"><%= link_to '', edit_company_path(company) , class:'btn btn-primary fa fa-2x fa-edit'%></td>
        <td class="col-xs-1"><%= link_to '', company, method: :delete, data: { confirm: 'Tem certeza?' } , class:'btn btn-danger fa fa-2x fa-trash'%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>
<%= link_to 'Nova Empresa', new_company_path , class:'btn btn-success'%>
