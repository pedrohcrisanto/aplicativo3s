<h2 class="text-center">Categorias</h2>
<div class="box box-primary container box-body">
<table class="table table-bordered table-hover table-striped">
  <thead>
    <tr>
      <th>#</th>
      <th>Nome</th>
      <th>Descricao</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.id %></td>
        <td><%= category.nome %></td>
        <td><%= category.descricao %></td>
        <td class="col-xs-1"><%= link_to '', category , class:'btn btn-info fa fa-2x fa-eye'%></td>
        <td class="col-xs-1"><%= link_to '', edit_category_path(category) , class:'btn btn-primary fa fa-2x fa-edit'%></td>
        <td class="col-xs-1"><%= link_to '', category, method: :delete, data: { confirm: 'Tem certeza?' } , class:'btn btn-danger fa fa-2x fa-trash'%></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
</div>
<%= link_to 'Nova Categoria', new_category_path , class:'btn btn-success'%>
