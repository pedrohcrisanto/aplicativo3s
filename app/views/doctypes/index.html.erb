<h2 class="text-center">Tipo de Documentos</h2>
<div class="box box-primary container box-body">
<table class="table table-bordered table-hover table-striped">
  <thead>
    <tr>
      <th>#</th>
      <th>Nome</th>
      <th>Descricao</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @doctypes.each do |doctype| %>
      <tr>
        <td><%= doctype.id %></td>
        <td><%= doctype.nome %></td>
        <td><%= doctype.descricao %></td>
        <td class="col-xs-1"><%= link_to '', doctype , class:'btn btn-info fa fa-2x fa-eye'%></td>
        <td class="col-xs-1"><%= link_to '', edit_doctype_path(doctype) , class:'btn btn-primary fa fa-2x fa-edit'%></td>
        <td class="col-xs-1"><%= link_to '', doctype, method: :delete, data: { confirm: 'Tem Certeza?' } , class:'btn btn-danger fa fa-2x fa-trash'%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>
<%= link_to 'Novo Tipo de Documento', new_doctype_path , class:'btn btn-success'%>
