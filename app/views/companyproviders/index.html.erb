<h1 class="text-center">Empresas Fornecedoras</h1>

<div class="box box-primary container box-body">
<table class="table table-bordered table-hover table-striped">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Cnpj</th>
      <th>Codigo contabil cliente</th>
      <th>Codigo contabil fornecedor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companyproviders.each do |companyprovider| %>
      <tr>
        <td><%= companyprovider.nome %></td>
        <td><%= companyprovider.cnpj %></td>
        <td><%= companyprovider.codigo_contabil_cliente %></td>
        <td><%= companyprovider.codigo_contabil_fornecedor %></td>
        <td class="col-xs-1"><%= link_to '', companyprovider , class:'btn btn-info fa fa-2x fa-eye'%></td>
        <td class="col-xs-1"><%= link_to '', edit_companyprovider_path(companyprovider) , class:'btn btn-primary fa fa-2x fa-edit'%></td>
        <td class="col-xs-1"><%= link_to '', companyprovider, method: :delete, data: { confirm: 'Tem certeza?' } , class:'btn btn-danger fa fa-2x fa-trash'%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>
<%= link_to 'Nova Empresa Fornecedora', new_companyprovider_path , class:'btn btn-success' %>
