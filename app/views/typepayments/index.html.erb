<h2 class="text-center">Tipos de Transação</h2>
<div class="box box-primary container box-body">
<table class="table table-bordered table-hover table-striped">
  <thead>
    <tr>
      <th>#</th>
      <th>Nome</th>
      <th>Descricao</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @typepayments.each do |typepayment| %>
      <tr>
        <td><%= typepayment.id %></td>
        <td><%= typepayment.nome %></td>
        <td><%= typepayment.descricao %></td>
        <td class="col-xs-1"><%= link_to '', typepayment , class:'btn btn-info fa fa-2x fa-eye'%></td>
        <td class="col-xs-1"><%= link_to '', edit_typepayment_path(typepayment) , class:'btn btn-primary fa fa-2x fa-edit' %></td>
        <td class="col-xs-1"><%= link_to '', typepayment, method: :delete, data: { confirm: 'Tem certeza?' } , class:'btn btn-danger fa fa-2x fa-trash'%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>
<%= link_to 'Novo Tipo Pagamento', new_typepayment_path , class:'btn btn-success' %>