
<h2 class="text-center">Contas Bancarias</h2>
<div class="box box-primary container box-body">
<table class="table table-bordered table-hover table-striped">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Banco</th>
      <th>Agencia</th>
      <th>Conta corrente</th>
      <th>Codigo contabil</th>
      <th>Empresa</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @accountbanks.each do |accountbank| %>
      <tr>
        <td><%= accountbank.nome %></td>
        <td><%= accountbank.banco %></td>
        <td><%= accountbank.agencia %></td>
        <td><%= accountbank.conta_corrente %></td>
        <td><%= accountbank.codigo_contabil %></td>
        <td><%= accountbank.company.nome %></td>
        <td class="col-xs-1"><%= link_to '', accountbank , class:'btn btn-info fa fa-2x fa-eye'%></td>
        <td class="col-xs-1"><%= link_to '', edit_accountbank_path(accountbank) , class:'btn btn-primary fa fa-2x fa-edit'%></td>
        <td class="col-xs-1"><%= link_to '', accountbank, method: :delete, data: { confirm: 'Tem certeza?' }  , class:'btn btn-danger fa fa-2x fa-trash'%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova Conta Bancaria', new_accountbank_path , class:'btn btn-success' %>
